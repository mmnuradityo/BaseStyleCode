<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/basestyle_bg_item_rounded"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/baseStyle_spaceSmall">

    <TextView
        android:id="@+id/tv_title_item_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="@dimen/baseStyle_textLarge"
        android:text="title"
        android:layout_margin="@dimen/baseStyle_spaceSmaller"/>

    <TextView
        android:id="@+id/tv_detail_item_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="@dimen/baseStyle_textNormal"
        android:text="description"
        android:layout_margin="@dimen/baseStyle_spaceSmaller"/>

</LinearLayout>