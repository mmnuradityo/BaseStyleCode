<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:minHeight="@dimen/baseStyle_minHeightDialog">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/baseStyle_spaceSmall"
        android:textStyle="bold"
        android:textSize="18sp"
        android:gravity="center"
        android:text="Cutome Dialog"/>

    <com.mmnuradityo.basestyle.widget.ButtonRounded
        android:id="@+id/btn_close_custome_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/baseStyle_spaceSmall"
        android:textAllCaps="false"
        android:text="Close"/>

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>